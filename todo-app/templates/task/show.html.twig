{% extends 'base.html.twig' %}

{% block title %}Detalhes da Tarefa{% endblock %}

{% block body %}
    <h2 class="mb-4 text-center">Detalhes da Tarefa</h2>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Criado em</th>
                <td>{{ task.createdAt ? task.createdAt|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Atualizado em</th>
                <td>{{ task.updatedAt ? task.updatedAt|date('d/m/Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Título</th>
                <td>{{ task.title }}</td>
            </tr>
            <tr>
                <th>Descrição</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Prazo</th>
                <td>{{ task.dueAt ? task.dueAt|date('d/m/Y H:i') : '—' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ task.getStatusLabel }}</td>
            </tr>
            <tr>
                <th>Prioridade</th>
                <td>{{ task.getPriorityLabel }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-4 d-flex gap-2 justify-content-center">
        <a href="{{ path('app_task_index') }}" class="btn btn-secondary d-flex align-items-center">
            ⬅ Voltar
        </a>

        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning d-flex align-items-center">
            ✏ Editar
        </a>

        <a href="" class="btn btn-danger">{{ include('task/_delete_form.html.twig') }}</a>
    </div>
{% endblock %}
