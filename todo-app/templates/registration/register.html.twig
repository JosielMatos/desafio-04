{% extends 'base.html.twig' %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-4">
        <h1 class="h3 mb-3">Registrar-se</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, { label: 'Senha' }) }}
            <button type="submit" class="btn btn-success w-100 mt-2">Registrar</button>
        {{ form_end(registrationForm) }}

        <div class="mt-3">
            <a href="{{ path('app_login') }}">Já possui uma conta? Faça Login</a>
        </div>
    </div>
</div>
{% endblock %}
